<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarThumbVertical="@null"
    android:scrollbarThumbHorizontal="@null"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:padding="20sp">


            <ImageView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="125dp"
                android:id="@+id/college_profile"
                android:layout_centerHorizontal="true"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/k70"
                />

            <TextView
                android:layout_below="@+id/college_profile"
                android:layout_centerInParent="true"
                android:id="@+id/Profilename"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K 70"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10sp"
                android:gravity="center"
                />
            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:layout_below="@+id/Profilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WE HAV ETHE BEST"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10sp"
                />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50sp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0sp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#03A9F4"
                android:elevation="10sp"
                android:layout_margin="10sp"
                >


                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/labeled">

                    <ImageView
                        android:id="@+id/f_cv"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/new_order" />



                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/T_branch"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_height="wrap_content"
                        android:text="CREATE ORDER"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/f_cv"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="0sp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#03A9F4"
                android:elevation="10sp"
                android:layout_margin="10sp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp">

                    <ImageView
                        android:layout_margin="5dp"
                        android:id="@+id/s_cv"
                        android:layout_width="65sp"
                        android:layout_height="65sp"
                        android:src="@drawable/pending_order"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/subject"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Order History"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/s_cv"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

